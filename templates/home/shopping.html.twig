{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Votre panier</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            {% if items | length > 0 %}
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('shopDel', {'id': item.product.id })}}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" class="text-end"> Total :</td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>
                </tfoot>
            {% else %}
                <p class="text-center"> Votre panier est vide </p>
            {% endif %}
        </table>
    </div>
{% endblock %}