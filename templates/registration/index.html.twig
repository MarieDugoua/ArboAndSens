{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-center mt-5">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
        <div class="d-flex flex-row">
            <div class="d-flex flex-column ">
                <h3>Vos information</h3>
                {{ form_start(registrationForm) }}
                <div class="d-flex flex-column">
                    <div class="firstName m-2">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="lastName m-2">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <div class="email m-2">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="passWord m-2">
                        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                    </div>
                </div>
                <div class="birthDate m-2">
                    {{ form_row(registrationForm.birthDate) }}
                </div>
            </div>
            <div class="d-flex flex-column ">
                <h3>Votre adresse</h3>
                {{ form_start(addressForm) }}
                <div class="d-flex flex-column">
                    <div class="d-flex flex-column">
                        <div class="title m-2">
                            {{ form_row(addressForm.title) }}
                        </div>
                        <div class="address m-2">
                            {{ form_row(addressForm.address) }}
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="zipCode m-2">
                            {{ form_row(addressForm.zipcode) }}
                        </div>
                        <div class="passWord m-2">
                            {{ form_row(addressForm.city) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column ">
                <h3>Votre carte de credit</h3>
                {{ form_start(paymentForm) }}
                <div class="d-flex flex-column">
                    <div class="d-flex flex-column">
                        <div class="title m-2">
                            {{ form_row(paymentForm.title) }}
                        </div>
                        <div class="cardNumber m-2">
                            {{ form_row(paymentForm.cardnumber) }}
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="expireDate m-2">
                            {{ form_row(paymentForm.expiredate) }}
                        </div>
                        <div class="securityNumber m-2">
                            {{ form_row(paymentForm.securitynumber) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=" d-flex flex-row button m-auto mt-3">
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn btn-outline-primary mx-5">Register</button>
        </div>
        {{ form_end(paymentForm) }}
        {{ form_end(addressForm) }}
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
