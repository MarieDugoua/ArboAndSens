{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-center mt-5">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
        <div class="d-flex flex-row">
            <div class="d-flex flex-column m-auto">
                {{ form_start(registrationForm) }}
                <div class="d-flex flex-column">
                    <div class="firstName m-2">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="lastName m-2">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <div class="email m-2">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="passWord m-2">
                        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                    </div>
                </div>
                <div class="birthDate m-2">
                    {{ form_row(registrationForm.birthDate) }}
                </div>
            </div>
        </div>
        <div class=" d-flex flex-row button m-auto mt-3 justify-content-around w-50">
            {{ form_row(registrationForm.agreeTerms) }} {{ form_end(registrationForm) }}
        </div>


    </div>
{% endblock %}
